<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForecastActivity">
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/container" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/forecastTitleLabel" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">

    </FrameLayout>
    <TextView
            android:text="地域の天気"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forecastTitleLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.1"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="登録地域変更"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/configLocationButton" app:layout_constraintStart_toEndOf="@+id/forecastTitleLabel"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
    />
</androidx.constraintlayout.widget.ConstraintLayout>